<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Input fields for POST/PUT request -->
    <EditText
        android:id="@+id/input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student ID (for GET|PUT|DELETE requests)" />

    <EditText
        android:id="@+id/input_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name" />

    <EditText
        android:id="@+id/input_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <!-- Button to POST data -->
    <Button
        android:id="@+id/button_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send POST Student" />

    <!-- Button to PUT data -->
    <Button
        android:id="@+id/button_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send PUT Student" />

    <!-- Button to DELETE data -->
    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send DELETE Student" />
    <!-- Button to GET data -->
    <Button
        android:id="@+id/button_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send GET Student" />

    <!-- Button to GET All data -->
    <Button
        android:id="@+id/button_get_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get All Students" />


    <!-- TextView to display GET/PUT/POST response -->
    <TextView
        android:id="@+id/text_get_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response will appear here" />

</LinearLayout>
